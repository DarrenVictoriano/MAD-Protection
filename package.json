{
  "name": "mad-protection",
  "version": "1.0.0",
  "description": "MAD Password Manager",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "test": "mocha -u tdd --reporter spec --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DarrenVictoriano/MAD-Protection.git"
  },
  "author": "MAD",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DarrenVictoriano/MAD-Protection/issues"
  },
  "homepage": "https://github.com/DarrenVictoriano/MAD-Protection#readme",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "cross-env": "^5.2.0",
    "mocha": "^5.2.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "if-env": "^1.0.4",
    "mongoose": "^5.5.3"
  }
}